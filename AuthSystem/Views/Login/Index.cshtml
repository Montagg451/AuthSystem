@using System.ComponentModel.DataAnnotations;
@model User
@{
    Layout = "LayoutDeslogado";
    ViewData["Title"] = " Login ";
}

@using (Html.BeginForm("Index", "Login", FormMethod.Post))
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

<div class="container">
    <div id="boxlogin">
        <div id="formcontrol">
            <form asp-controller="Login" asp-action="Index" method="post">
                <div id="titlelogin">
                    <span>Login</span>
                    <hr class="labellogin" />
                </div>
                <div class="mb-3 labellogin">
                    <label for="Login" class="form-label">Login</label>
                    <input type="text" asp-for=Login class="form-control" id="Login" />
                     @Html.ValidationMessageFor(x => x.Login)
                </div>
                <div class="mb-3 labellogin">
                    <label for="Senha" class="form-label">Senha</label>
                    <input type="password" asp-for=Senha class="form-control" id="senha" />
                    @Html.ValidationMessageFor(x => x.Senha)
                </div>
                @*<div class="mb-3" id="text">
                    <button type="button">Esqueci minha senha</button>
                </div>
                <div class="mb-3" id="text">
                    <button type="button">Criar Usuário </button>
                </div>*@
                <button type="submit" class="btn btn-primary labellogin">Entrar</button>
            </form>
        </div>
    </div>
   
</div>


